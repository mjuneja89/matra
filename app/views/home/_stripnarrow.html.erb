<div class="narrowheading narrow_<%= i %>">
	<div class="categorynarrow">
		<h4 class="namenarrow"><%= strip.name %></h4>
	</div>
</div>

<% strip.projects.each do |project| %>

<% if project.images.find_by(:id => project.cover_id).landscape.present? %>

<div class="narrowlandscape">
	<div class="landscapenarrow">
	   <%= link_to strip_project_path(project.strip, project) do %> 	
		<%= image_tag project.images.find_by(:id => project.cover_id).landscape.photo_url, :class => "fitlandscape" %>
	   <% end %>      
	</div>
</div>

<% end %>

<% if project.images.find_by(:id => project.cover_id).square.present? %>

<div class="narrowsquare">
	<div class="squarenarrow">
		<%= link_to strip_project_path(project.strip, project) do %>
	      <%= image_tag project.images.find_by(:id => project.cover_id).square.photo_url, :class => "fitsquare" %>
	   <% end %>      
	</div>
</div>

<% end %>

<% if project.images.find_by(:id => project.cover_id).portrait.present? %>

<div class="narrowportrait">
	<div class="portraitnarrow">
		<%= link_to strip_project_path(project.strip, project) do %> 	  
		  <%= image_tag project.images.find_by(:id => project.cover_id).portrait.photo_url, :class => "fitportrait" %>
		<% end %>      
	</div>
</div>

<% end %>

<% end %>

<div class="matra-arrow">
	<div class="arrownarrow">	
        <h4 style="margin-top: 30px"><i class="fa fa-angle-right"></i></h4>
    </div>
</div>
