<% if archive.photo_category == "landscape" %>
  <div class="col-landscape">
    <div class="coverbox">
      <div class="coverpic">
        <%= image_tag archive.photo_url, :class => 'fitlandscape' %>
      </div>
      <div class="setcover">
        <%= link_to archivestrip_archive_path(archive.archivestrip, archive), :class => "btn matrabtn", :style => "margin-bottom: 2%", method: :delete do %>
           delete
        <% end %> 
        <%= link_to edit_archivestrip_archive_path(archive.archivestrip, archive), :class => "btn matrabtn" do %>
           edit
        <% end %> 
      </div>
    </div>
  </div>
<% end %>
