<div id ="image_<%= image.id %>">  
     
     <% if image.square.present? %>       
       
       <div class="square-col">
       	 <div class="square">
                <%= link_to image_path(image), :remote => true do %>  
       	 	<%= image_tag image.square.photo_url, :class => "fitimg" %>
                <% end %>  
       	 </div> 
       </div>

      <% end %> 

      <% if image.landscape.present? %>
       
       <div class="landscape-col">
       	<div class="landscape">
               <%= link_to image_path(image), :remote => true do %>   		
       	 	<%= image_tag image.landscape.photo_url, :class => "fitimg" %>
               <% end %>   
       	 </div> 
       </div>

      <% end %> 

      <% if image.portrait.present? %>
       
       <div class="portrait-col">
       	<div class="portrait">
               <%= link_to image_path(image), :remote => true do %>                
       	 	<%= image_tag image.portrait.photo_url, :class => "fitimg" %>
               <% end %>  
       	 </div> 
       </div>
 
 <% end %>
</div> 