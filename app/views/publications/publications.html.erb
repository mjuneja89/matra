<html>

<% content_for :head do %>
	  
  <title>matra architects: publications</title>

  <script type="text/javascript">
  
  $(document).ready(function(){
    
   <% @publications.each_with_index do |publication, i| %>
     
     $("#publication_<%= i %> img").hover( 
      function(){
        $("div.categorybroad").html('<h2 class="boldheading"><%= publication.first_name %></h2><h2 class="lightheading"><%= publication.last_name %></h2>');
      },
      function(){
      $("div.categorybroad").html('<h2 class="namebroad">publications</h2>');  
      }
      );

   <% end %> 

  });
     
  </script>

<% end %>

<body>

<div class="container-fluid" style="margin-top: 3%">
  
  <%= render :partial => 'strip' %>
  
  <div style="display: none"> 
   <%= paginate @publications, :remote => true %>
  </div> 
  
</div>

</div>


</body>

</html>
