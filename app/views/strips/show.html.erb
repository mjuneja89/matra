<html>

<head>	
  
  <title><%= @strip.name %></title>

</head>

<body>

<div class="container-fluid" style="margin-top: 3%">
  
  <div class="col-xs-12" style="text-align: center">
    
    <div id="mainimagebox">
      
      <% if @projects.first.images.find_by(:id => @projects.first.cover_id).landscape.present? %>
        
        <div class="mainlandscapebox">
        <%= image_tag @projects.first.images.find_by(:id => @projects.first.cover_id).landscape.photo_url, :class => "fitimg" %>
        </div>         

      <% end %>
      
      <% if @projects.first.images.find_by(:id => @projects.first.cover_id).square.present? %>
         
         <div class="mainsquarebox">
         <%= image_tag @projects.first.images.find_by(:id => @projects.first.cover_id).square.photo_url, :class => "fitimg" %>
         </div>

      <% end %>

      <% if @projects.first.images.find_by(:id => @projects.first.cover_id).portrait.present? %>
         
         <div class="mainportraitbox">
          <%= image_tag @projects.first.images.find_by(:id => @projects.first.cover_id).portrait.photo_url, :class => "fitimg" %>
         </div> 

      <% end %>

    </div>

  </div>

</div>

<div class="matra-container" style="margin-top: 6%">   
  
  <div class="matra-row">

  <div class="arrow-col">
     <div id="arrowbox1">
      <%= render :partial => 'shared/arrowleft' %>
     </div>
  </div>  

   <div class="heading-col marginleft">
   	  <div class="category">
   	  	<h5 class="categorystrip"><%= @strip.name %></h5>
   	  </div> 
   </div>
   
  <div id="images"> 
   <%= render :partial => 'shared/image', collection: @images %>
  </div> 
   
   <div class="arrow-col">
	   <div id="arrowbox">
	   	<%= render :partial => 'shared/arrowright' %>
     </div>
	</div>  

  </div>

</div>


</body>

</html>
