<html>

<head>	
  
  <title><%= @strip.name %></title>

</head>

<body>

<div class="container-fluid" style="margin-top: 3%">
  
  <div class="col-xs-12" style="text-align: center">
    
    <div id="mainimagebox">
      
      <% if @strip.projects.first.images.find_by(:id => @strip.projects.first.cover_id).landscape.present? %>
        
        <div class="mainlandscapebox">
        <%= image_tag @strip.projects.first.images.find_by(:id => @strip.projects.first.cover_id).landscape.photo_url, :class => "fitimg" %>
        </div>         

      <% end %>
      
      <% if @strip.projects.first.images.find_by(:id => @strip.projects.first.cover_id).square.present? %>
         
         <div class="mainsquarebox">
         <%= image_tag @strip.projects.first.images.find_by(:id => @strip.projects.first.cover_id).square.photo_url, :class => "fitimg" %>
         </div>

      <% end %>

      <% if @strip.projects.first.images.find_by(:id => @strip.projects.first.cover_id).portrait.present? %>
         
         <div class="mainportraitbox">
          <%= image_tag @strip.projects.first.images.find_by(:id => @strip.projects.first.cover_id).portrait.photo_url, :class => "fitimg" %>
         </div> 

      <% end %>

    </div>

  </div>

</div>

<div class="matra-container" style="margin-top: 6%">
  
  <div class="matra-row">
  </div>

</div>

</body>

</html>
