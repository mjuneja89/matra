<html>

<head>	
  
  <title><%= @strip.name %></title>

  <script type="text/javascript">
   
   $(document).ready(function(){ 

    <% @images.each do |image| %>

    $('#image_<%= image.id %>').hover(
        
        function(){
           $('div.category').html('<h3 class="boldfirstname"><%= image.project.first_name %></h3><h3 class="normallastname"><%= image.project.last_name %></h3>');
        },

        function(){
           $('div.category').html('<h3 class="parentcategory"><%= @strip.name %></h3>');
        }
   
      );
    
    <% end %>

   });

  </script>

</head>

<body>

<div class="matra-container-nr">
  
  <div class="matra-row" style="text-align: center">

      <div class="matra-col-2">
        <div id="descriptionbox">   
         <div style="padding: 15px" id="manipulatedescription">
          <%= simple_format(@projects.first.description) %>
         </div> 
        </div>
      </div> 

      <div class="matra-col-10">
      
        <div class="mainimagebox">

          <div id="mainimagebox">   
      
          <% if @projects.first.images.find_by(:id => @projects.first.cover_id).photo_category == "landscape" %>
        
           <div class="mainlandscapebox">
             <%= image_tag @projects.first.images.find_by(:id => @projects.first.cover_id).photo_url, :class => "fitimg" %>
            </div>         

           <% end %>
      
           <% if @projects.first.images.find_by(:id => @projects.first.cover_id).photo_category == "square" %>
         
            <div class="mainsquarebox">
             <%= image_tag @projects.first.images.find_by(:id => @projects.first.cover_id).photo_url, :class => "fitimg" %>
            </div>

          <% end %>

          <% if @projects.first.images.find_by(:id => @projects.first.cover_id).photo_category == "portrait" %>
         
             <div class="mainportraitbox">
               <%= image_tag @projects.first.images.find_by(:id => @projects.first.cover_id).photo_url, :class => "fitimg" %>
             </div> 

          <% end %>

         </div>

         </div>

        </div>

       </div>

       </div> 

<div class="matra-container-parent" style="margin-top: 2%">   
  
  <div class="matra-row">

    <div class="arrow-col">
     <div id="arrowbox1">
      <%= render :partial => 'shared/arrowleft' %>
     </div>
    </div>
  

<div class="matra-container-child"> 
   
  <div class="matra-row">

   <div class="heading-col">
      <div class="category">
        <h3 class="parentcategory"><%= @strip.name %></h3>
      </div> 
   </div>  
  
    <div id="images">
      <%= render :partial => 'shared/image', collection: @images %>
    </div>

  </div> 

</div>      

 
 <div class="arrow-col">
	 <div id="arrowbox">
	   	<%= render :partial => 'shared/arrowright' %>
    </div>
 </div>  

  </div>

</div>


</body>

</html>
