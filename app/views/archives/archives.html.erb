<html>

<% content_for :head do %>
	  
  <title>matra architects: archives</title>

  <script type="text/javascript">
  
  $(document).ready(function(){
    
   <% @archives.each_with_index do |archive, i| %>
     
     $("#archive_<%= i %> img").hover( 
      function(){
        $("div.category").html('<h3 class="boldfirstname"><%= archive.first_name %></h3><h3 class="normallastname"><%= archive.last_name %></h3>');
      },
      function(){
      $("div.category").html('<h3 class="parentcategory">archives</h3>');  
      }
      );

   <% end %> 

  });
     
  </script>

<% end %>

<body>

<div class="matra-container-nr">
	
	<div class="matra-row" style="text-align: center">

	   <div class="matra-col-2">
	      
	      <div id="descriptionbox">   
          <div style="padding: 15px" id="manipulatedescription">
          </div> 
          </div>
       
       </div>  

       <div class="matra-col-10">
       	 
       	 <div class="mainimagebox">
       	 	<div id="mainimagebox">
       	 	  <% if @archives.first.photo_category == "landscape" %> 
       	 		<div class="mainlandscapebox">
       	 			<%= image_tag @archives.first.photo_url, :class => "fitimg" %>
       	 		</div>
       	 	  <% end %>

       	 	  <% if @archives.first.photo_category == "portrait" %> 
       	 		<div class="mainportraitbox">
       	 			<%= image_tag @archives.first.photo_url, :class => "fitimg" %>
       	 		</div>
       	 	  <% end %>	


       	 	  <% if @archives.first.photo_category == "square" %> 
       	 		<div class="mainsquarebox">
       	 			<%= image_tag @archives.first.photo_url, :class => "fitimg" %>
       	 		</div>
       	 	  <% end %>	

       	 	</div>
       	 </div>

       </div>   

	</div>

</div>


<div class="matra-container-parent" style="margin-top: 2%">
  
  <div class="matra-row">

    <div class="arrow-col">
    </div>

  <div class="matra-container-child">  
    
   <div class="matra-row">

    <div class="heading-col">
	<div class="category">
		<h3 class="parentcategory">archives</h3>
	</div>
    </div> 
    
    <div id="archives">
      <%= render :partial => 'shared/archive', collection: @archives %>
    </div>

   </div> 

  </div>

    <div class="arrow-col">  	
    </div>
  
</div>

</div>

</body>

</html>
