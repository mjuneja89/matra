<html>

<head>	
  
  <title>matra architects: create project</title>

  <script type="text/javascript">
  
$(document).ready(function(){
 
 $("#squarebtn").click(function(){
  
  $("#squarefield").click(); 

 });

  $("#landscapebtn").click(function(){
  
  $("#landscapefield").click(); 

 });

  $("#portraitbtn").click(function(){
  
  $("#portraitfield").click(); 

 });

});
 


  </script>

</head>

<body>

<div class="container-fluid" style="margin-top: 3%">

<div class="row">
	<div class="col-sm-6 col-sm-offset-3" style="text-align: center">
        
        <h3 style="color: #7f7f7f">create a new project</h3>

		<%= form_for(@project, url: strip_projects_path(@strip), :html => { :multipart => true }) do |f| %>
          
          <%= f.text_field :name, :placeholder => "enter the project's name", :class => "matrainput" %>
          <%= f.text_area :description, :placeholder => "enter the project's description", :class => "matrainput2" %>

          <%= f.fields_for :squares do |i| %>
            <%= i.file_field :photo, :multiple => true, name: "squares[photo][]", style: "display:none", :id => "squarefield" %>
          <% end %>

          <div id="squarebtn" style="text-align: center">
            <a href="#" id="choosesquare" class="btn matrabtn">add squares</a>   
          </div>

          <%= f.fields_for :landscapes do |i| %>
            <%= i.file_field :photo, :multiple => true, name: "landscapes[photo][]", style: "display:none", :id => "landscapefield" %>
          <% end %>

          <div id="landscapebtn" style="text-align: center">
            <a href="#" id="chooselandscape" class="btn matrabtn">add landscapes</a>   
          </div>
          
          <%= f.fields_for :portraits do |i| %>
            <%= i.file_field :photo, :multiple => true, name: "portraits[photo][]", style: "display:none", :id => "portraitfield" %>
          <% end %>


          <div id="portraitbtn" style="text-align: center">
            <a href="#" id="chooseportrait" class="btn matrabtn">add portraits</a>   
          </div>
  
          <%= f.submit "create", :class => "matrabtn" %>

		<% end %>
	</div>
</div>

</div>


</body>

</html>
