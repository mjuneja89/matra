<html>

<head>	
  
  <title>matra architects: create project</title>

</head>

<body>

<div class="container-fluid" style="margin-top: 3%">

<div class="row">
	<div class="col-sm-6 col-sm-offset-3" style="text-align: center">
        
        <h3 style="color: #7f7f7f">create a new project</h3>

        <div id="avatarbox">
          <img class="fitpreview" />
        </div>

		<%= form_for(@project, url: strip_projects_path(@strip), :html => { :multipart => true }) do |f| %>
          
          <%= f.text_field :first_name, :placeholder => "enter the project's first name", :class => "matrainput" %>
          <%= f.text_field :last_name, :placeholder => "enter the project's last name", :class => "matrainput" %>
          <%= f.text_field :location, :placeholder => "enter the project's location", :class => "matrainput" %>
          <%= f.text_field :yearcompleted, :placeholder => "when was the project completed?", :class => "matrainput" %>
          <%= f.text_area :description, :placeholder => "enter the project's description", :class => "matrainput2" %>
          
    <%= f.submit "create", :class => "matrabtn" %>

		<% end %>
	</div>
</div>

</div>


</body>

</html>
