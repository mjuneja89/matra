<html>

<head>	
  
  <title><%= @project.first_name %><%= " " %><%= @project.last_name %></title>

</head>

<body>

<div class="matra-container-nr">

<div class="matra-row" style="text-align:center">
 
 <div class="matra-col-2">
   <div id="descriptionbox">   
    <div style="padding: 15px" id="manipulatedescription">
     <%= simple_format(@project.description) %>
    </div> 
   </div>
 </div> 
  
 <div class="matra-col-10">
  
  <div class="mainimagebox">
  
  <div id="mainimagebox">  

  <% if @images.first.square.present? %>
    
  <div class="mainsquarebox">
    <%= image_tag @images.first.square.photo_url, :class => "fitimg" %>
  </div>
    
  <% end %>
    
  <% if @images.first.landscape.present? %>
    
  <div class="mainlandscapebox">
    <%= image_tag @images.first.landscape.photo_url, :class => "fitimg" %>
  </div>
    
  <% end %>
    
  <% if @images.first.portrait.present? %>
    
  <div class="mainportraitbox">
    
    <%= image_tag @images.first.portrait.photo_url, :class => "fitimg" %>
    
  </div>
    
  <% end %>
  
  </div>
  
  </div>

  </div>

  </div>

</div>

<div class="matra-container-parent" style="margin-top: 2%">

<div class="matra-row">

  <div class="arrow-col">
     <div id="arrowbox2">
      <%= render :partial => 'shared/arrowleft' %>
     </div>
  </div>  
  
<div class="matra-container-child">

<div class="matra-row">
   
  <div class="heading-col">
   	  <div class="category">
   	  	<h3 class="boldfirstname"><%= @project.first_name %></h3>
        <h3 class="normallastname"><%= @project.last_name %></h3> 
   	  </div> 
   </div>
   
  <div id="images"> 
   <%= render :partial => 'shared/image', collection: @images %>
  </div> 
   
</div>

</div>
 
 <div class="arrow-col">
     <div id="arrowbox">
      <%= render :partial => 'shared/arrowright' %>
     </div>
</div>  

</div>

</div>

</body>

</html>
