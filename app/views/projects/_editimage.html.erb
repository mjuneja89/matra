<% if image.photo_category == "landscape" %>
  <div class="col-sm-4">
  	<div class="coverbox">
  		<div class="coverpic">
  			<%= image_tag image.photo_url, :class => 'fitlandscape' %>
  		</div>
  		<div class="setcover">
  			<%= link_to image_path(image), :class => "btn matrabtn", :style => "margin-bottom: 2%", method: :delete do %>
  			   delete
  			<% end %> 
  		</div>
  	</div>
  </div>
<% end %>
