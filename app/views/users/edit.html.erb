<html>

<head>	
  
  <title>matra architects: edit user</title>

<body>

<%= render partial: 'shared/navbar' %>

<div class="container-fluid" style="margin-top: 3%">

<div class="row">
	<div class="col-sm-6 col-sm-offset-3" style="text-align: center">
        
        <h3 style="color: #7f7f7f">edit matra user</h3>

		<%= form_for(@user, url: user_path(@user), :method => "put") do |f| %>
          
          <%= f.text_field :first_name, :placeholder => "enter first name", :class => "matrainput" %>
          <%= f.text_field :last_name, :placeholder => "enter last name", :class => "matrainput" %>
          <%= f.text_area :description, :placeholder => "enter description", :class => "matrainput" %>
          <%= f.number_field :order_id, :placeholder => "enter the user's priority", :class => "matrainput" %>
 

    <%= f.submit "create", :class => "matrabtn" %>

		<% end %>
	</div>
</div>

</div>


</body>

</html>
