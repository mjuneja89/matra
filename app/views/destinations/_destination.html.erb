  
  <% if destination.photo_category == "portrait" %>
     
     <div class="mainportraitbox">
	  	<%= image_tag destination.photo_url, :class => "fitsquare" %>
	 </div> 	

   <% elsif destination.photo_category == "landscape" %>

     <div class="mainlandscapebox">
	  	<%= image_tag destination.photo_url, :class => "fitsquare" %>
	 </div> 	

   <% else %>

     <div class="mainsquarebox">
	  	<%= image_tag destination.photo_url, :class => "fitsquare" %>
	 </div> 	

   <% end %>

