<div class="matra-row" style="margin-top: 4%">

<div class="broadheading" style="width: 12%">
	<div class="categorybroad">
		<h2 class="namebroad">team</h2>
	</div>
</div>

<% @users.each_with_index do |user, i| %>
   
   <% if user.role == "admin" %>

   <div></div>

   <% else %> 

   <% if user.avatar_category == "portrait" %>
     
     <div class="broadportrait user_<%= i %>">
	  <div class="portraitbroad">
	  	<%= image_tag user.avatar_url, :class => "fitsquare" %>
	  </div>
	 </div> 	

   <% elsif user.avatar_category == "landscape" %>

     <div class="broadlandscape user_<%= i %>">
	  <div class="landscapebroad">
	  	 <%= image_tag user.avatar_url, :class => "fitlandscape" %>
	  </div>
	 </div> 	

   <% else %>

     <div class="broadsquare">
	  <div class="squarebroad user_<%= i %>">
	  	 <%= image_tag user.avatar_url, :class => "fitsquare" %> 
	  </div>
	 </div> 

   <% end %>

  <% end %> 

<% end %>

<div class="matra-arrow">
	<div class="arrowbroad">	
        <h4 style="margin-top: 80px"><i class="fa fa-angle-right"></i></h4>
    </div>
</div>

</div>